<h1>List of articles</h1>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.body %></td>
      <%# Post options %>
      <td>
        <ul class="list-inline">
          <%# Show %>
          <li class="list-inline-item">
            <%= link_to 'Show', article_path(article) %>
          </li>
          <%# Edit %>
          <% if user_signed_in? && article.can_user_edit?(current_user) %>
            <li class="list-inline-item">
              <%= link_to 'Edit', edit_article_path(article) %>
            </li>
          <% end %>
          <%# Delete %>
          <% if user_signed_in? && article.can_user_delete?(current_user) %>
            <li class="list-inline-item">
              <%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
            </li>
          <% end %>
        </ul>
      </td>
    </tr>
  <% end %>
</table>

<% if user_signed_in? && Article.can_user_create?(current_user) %>
  <%= link_to 'New article', new_article_path %>
<% end %>
