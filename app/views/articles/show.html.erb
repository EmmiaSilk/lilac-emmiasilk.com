<!-- Blog post -->
<article>
  <h1><%= @article.title %></h1>
  <p>
    <%= markdown(@article.text, header_level: 2, allow_headers: true) %>
  </p>
</article>

<%= render 'article_nav' %>

<hr>

<!-- User comments list -->
<div id="comments">
  <h2>Comments</h2>
  <% @article.comments.each do |comment| %>
    <%= render partial: 'comments/comment', object: comment %>
  <% end %>
</div>


<!-- Fields for adding comments -->
<%= render 'comments/form' %>

<%= render 'article_nav' %>
